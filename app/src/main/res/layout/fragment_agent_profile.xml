<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/noimage"
            android:contentDescription="Profile Picture"
            android:background="@drawable/profile_circle_bg"
            android:padding="16dp" />

        <!-- Name -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunal Sarpal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="#333" />

        <!-- Email -->
        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kunal@example.com"
            android:textSize="16sp"
            android:textColor="#777"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="24dp"
            android:background="#DDDDDD" />

        <!-- User Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID: 12345678"
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: +91-9876543210"
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="32dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF3B30"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_launcher_foreground"
            android:drawablePadding="8dp" />

    </LinearLayout>
</ScrollView>
